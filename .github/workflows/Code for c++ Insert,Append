#include <iostream>
using namespace std;

 

void displayMenu() {
    cout << "|=======================================|" << endl;
    cout << "| Main Menu of Access, Replace, Insert  |" << endl;
    cout << "|---------------------------------------|" << endl;
    cout << "| 1. Access                             |" << endl;
    cout << "| 2. Replace                            |" << endl;
    cout << "| 3. Append                             |" << endl;
    cout << "| 4. Display                            |" << endl;
    cout << "| 5. Exit                               |" << endl;
    cout << "|=======================================|" << endl;
    cout << "\n";
    cout << "Enter a number: ";
}

 

int main() {
    int array[10] = {1, 2, 3, 4, 5};
    int i = 0;
	int input;
    int index;
    int newValue;

 

    while (true) {
        cout << "|=======================================|" << "\n";
        cout << "|" << " " << "Array: [";
        for (int j = 0; j < 5; j++) {
            cout << array[j];
            if (j < 4)
                cout << ",";
        }
        cout << "]" << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " << " " <<"|" << "\n";
        displayMenu();
        cin >> input;
        i++;

 

        if (input == 1) {
            cout << "Select an index to Access (0-4): ";
            cin >> index;
            if (index >= 0 && index < 5)
                cout << "Number at index " << index << " is: " << array[index] << "\n";
            else
                cout << "Invalid index!\n";
        } else if (input == 2) {
            cout << "Select an index to Replace (0-4): ";
            cin >> index;
            if (index >= 0 && index < 5) {
                cout << "Enter the new value: ";
                cin >> array[index];
                cout << "Number at index " << index << " has been replaced.\n";
            } else {
                cout << "Invalid index!\n";
            }
        } else if (input == 3) {
            if (i < 5) {
                cout << "Select an index to Insert (0-4): ";
                cin >> index;
                if (index >= 0 && index <= i) {
                    cout << "Enter the value to insert: ";
                    cin >> newValue;
                    for (int j = i; j > index; j--)
                        array[j] = array[j - 1];

 

                    array[index] = newValue;
                    i++;
                    cout << "Value has been inserted at index " << index << "\n";
                } else {
                    cout << "Invalid index!\n";
                }
            } else {
                cout << "Array is full. Cannot insert more elements.\n";
            }
        } else if (input == 4) {
            cout << "Array: [";
            for (int j = 0; j < 5; j++) {
                cout << array[j];
                if (j < 4)
                    cout << ",";
            }
            cout << "]\n";

 

            cout << "\n";
        } else if (input == 5) {
            break;
        }
    }

 

    cout << "\n";
    return 0;
}


